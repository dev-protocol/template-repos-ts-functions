{
	"name": "template-repos-ts-functions",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"start": "func start",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"prestart": "yarn build",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{js,json,md,yml}'"
	},
	"dependencies": {
		"@azure/functions": "1.2.2",
		"bent": "7.3.10",
		"ramda": "0.27.1",
		"web3": "1.2.11"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@types/bent": "7.3.0",
		"@types/dotenv": "8.2.0",
		"@types/node": "14.6.4",
		"@types/ramda": "0.27.14",
		"@types/sinon": "9.0.5",
		"@typescript-eslint/eslint-plugin": "4.0.1",
		"@typescript-eslint/parser": "4.0.1",
		"ava": "3.12.1",
		"dotenv": "8.2.0",
		"eslint": "7.8.1",
		"eslint-config-prettier": "6.11.0",
		"eslint-plugin-functional": "3.0.2",
		"eslint-plugin-prettier": "3.1.4",
		"husky": "4.2.5",
		"prettier": "2.1.1",
		"rimraf": "3.0.2",
		"sinon": "9.0.3",
		"typescript": "4.0.2"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			}
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	}
}
