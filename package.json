{
	"name": "template-repos-ts-functions",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"start": "func start",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"prestart": "yarn build",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{js,json,md,yml}'"
	},
	"dependencies": {
		"@azure/functions": "3.5.1",
		"bent": "7.3.12",
		"ramda": "0.30.1",
		"ethereum-waffle": "3.4.4"
	},
	"devDependencies": {
		"@ava/typescript": "3.0.1",
		"@types/bent": "7.3.8",
		"@types/dotenv": "8.2.0",
		"@types/node": "20.14.14",
		"@types/ramda": "0.30.1",
		"@types/sinon": "17.0.3",
		"@typescript-eslint/eslint-plugin": "5.62.0",
		"@typescript-eslint/parser": "5.62.0",
		"ava": "4.3.3",
		"dotenv": "16.4.5",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-functional": "4.4.1",
		"eslint-plugin-prettier": "5.2.1",
		"husky": "7.0.4",
		"prettier": "2.8.8",
		"rimraf": "3.0.2",
		"sinon": "15.2.0",
		"typescript": "5.0.4"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			},
			"compile": false
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	}
}
