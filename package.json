{
	"name": "template-repos-ts-functions",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"start": "func start",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"prestart": "yarn build",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{js,json,md,yml}'"
	},
	"dependencies": {
		"@azure/functions": "2.0.0",
		"bent": "7.3.12",
		"ramda": "0.27.1",
		"ethereum-waffle": "3.4.0"
	},
	"devDependencies": {
		"@ava/typescript": "2.0.0",
		"@types/bent": "7.3.2",
		"@types/dotenv": "8.2.0",
		"@types/node": "16.11.7",
		"@types/ramda": "0.27.49",
		"@types/sinon": "10.0.6",
		"@typescript-eslint/eslint-plugin": "5.3.1",
		"@typescript-eslint/parser": "5.3.1",
		"ava": "3.15.0",
		"dotenv": "10.0.0",
		"eslint": "8.2.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-functional": "4.0.2",
		"eslint-plugin-prettier": "4.0.0",
		"husky": "7.0.4",
		"prettier": "2.4.1",
		"rimraf": "3.0.2",
		"sinon": "12.0.1",
		"typescript": "4.4.4"
	},
	"ava": {
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"/": "dist/"
			},
			"compile": false
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	}
}
